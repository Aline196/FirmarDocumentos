@model FirmarDocumentos.Models.DocumentoFirmarViewModel;
@{
    ViewData["Title"] = "Home Page";
}
<div class="d-flex justify-content-center" style="">

        <div class="card-body" style="align-items:self-end">
            <form class=" card shadow" method="post" enctype="multipart/form-data" asp-controller="FirmaElectronica" asp-action="GuardarCertificados">
                <div class="mb-3">
                    <label for="disabledTextInput" class="font-weight-bolder">Certificado (.cer)</label>
                    <input type="file" name="certificado" accept=".cer" id="disabledTextInput" class="form-control-file" placeholder="Disabled input">
                </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-primary">Verificar</button>
            </div>
            </form>
        </div>


        <div class="card-body " style="align-items: self-start">
            <form class=" card shadow-lg" method="post" enctype="multipart/form-data" asp-controller="FirmaElectronica" asp-action="GuardarclavePrivada">
                <div class="mb-3">
                    <label for="disabledTextInput" class="font-weight-bolder">Clave primaria (.key)</label>
                    <input type="file" name="clavePrivada" accept=".key" id="disabledTextInput" class="form-control-file" placeholder="Disabled input">
                </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-primary">Verificar</button>
            </div>
            </form>
        </div>

</div>


